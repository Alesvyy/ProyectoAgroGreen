<script>
    function guardarProducto(id) {
        console.log('actualizando', id);
        const fila = document.getElementById(`producto_${id}`);
        const datos = {
            NombreProducto: fila.cells[0].innerText.trim(),
            categoria: fila.cells[1].innerText.trim(),
            unidadesDispo: fila.cells[2].innerText.trim(),
            precio: fila.cells[3].innerText.trim(),
        };

        fetch(`/guardar-producto/${id}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(datos)
        })
        .then(response => {
            if (response.ok) {
                console.log('Producto actualizado correctamente');
            } else {
                console.error('Error al actualizar el producto');
            }
        })
        .catch(error => {
            console.error('Error al actualizar el producto:', error);
        });
    }

    function eliminarProducto(id) {
        fetch(`/eliminar-producto/${id}`, {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                document.getElementById(`producto_${id}`).remove();
                console.log('Producto eliminado correctamente');
            } else {
                console.error('Error al eliminar el producto');
            }
        })
        .catch(error => {
            console.error('Error al eliminar el producto:', error);
        });
    }
</script>


